<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <RelativeLayout
        android:id="@+id/rl_login_phone"
        android:layout_width="306.67dp"
        android:layout_height="wrap_content"
        android:minHeight="306.67dp"
        android:layout_centerInParent="true"
        android:visibility="visible">

<!--        <View
            android:id="@+id/view_whi1"
            android:layout_width="200dp"
            android:layout_height="0.1dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/yxf_lin_shape_whi"></View>-->

        <RelativeLayout
            android:id="@+id/rl_login_phone_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/yxf_bt_in_bg_whi">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="234dp"
                android:layout_height="30.67dp"
                android:layout_marginTop="19.67dp"
                android:layout_marginLeft="26.67dp"
                android:src="@drawable/yxf_login_logo" />

            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_logo"
                android:layout_marginLeft="26.67dp"
                android:layout_marginTop="29.67dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号登录"
                    android:textStyle="bold"
                    android:textColor="@color/yxf_sdk_gray_title"
                    android:textSize="14.67sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="0.5dp"
                    android:text="（无需注册）"
                    android:textColor="@color/yxf_sdk_gray"
                    android:textSize="12sp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll_login_frame"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_title"
                android:layout_marginLeft="26.67dp"
                android:layout_marginRight="26.67dp"
                android:layout_marginTop="13.33dp">

                <RelativeLayout
                    android:id="@+id/rl_username"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yxf_bt_in_edt_whi">

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:digits="1234567890"
                        android:hint="请输入手机号"
                        android:inputType="number"
                        android:maxLength="11"
                        android:paddingLeft="10.67dp"
                        android:singleLine="true"
                        android:textColor="@color/yxf_sdk_black"
                        android:textColorHint="@color/yxf_sdk_gray"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/iv_userselect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="10.67dp"
                        android:visibility="gone"
                        android:src="@drawable/yxf_down_arrow" />

                    <ImageView
                        android:id="@+id/iv_del"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="10.67dp"
                        android:src="@drawable/yxf_icon_del"
                        android:visibility="gone" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/rl_pwd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/rl_username"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_vetify"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="2"
                        android:background="@drawable/yxf_bt_in_edt_whi"
                        android:digits="1234567890"
                        android:hint="请输入验证码"
                        android:inputType="number"
                        android:maxLength="4"
                        android:paddingLeft="10.67dip"
                        android:singleLine="true"
                        android:textColor="@color/yxf_sdk_black"
                        android:textColorHint="@color/yxf_sdk_gray"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/bt_vetify"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/yxf_bt_in_gray"
                        android:text="获取验证码"
                        android:textColor="@color/yxf_sdk_white"
                        android:textSize="12sp" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_login_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_login_frame"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="26.67dp"
                android:layout_marginRight="26.67dp"
                android:layout_marginTop="13.33dp"
                android:orientation="vertical">

  <!--              <View
                    android:id="@+id/login_line1"
                    android:layout_width="200dp"
                    android:layout_height="0.1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/yxf_lin_shape_yel"
                    android:visibility="gone"></View>-->

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/yxf_bt_in_gray"
                    android:text="进入游戏"

                    android:textColor="@color/yxf_sdk_white"
                    android:textSize="14.67sp" />

<!--                <View
                    android:id="@+id/login_line2"
                    android:layout_width="200dp"
                    android:layout_height="0.1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/yxf_lin_shape_yel"
                    android:visibility="gone"></View>-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pwd_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_login_layout"

                android:layout_marginLeft="21.67dp"
                android:layout_marginTop="10.33dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_tellogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="账号密码登录>"
                    android:textColor="@color/yxf_sdk_blue"
                    android:paddingBottom="10.33dp"
                    android:textSize="12sp" />

<!--                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_quick_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ll_login_layout"

                android:layout_marginRight="21.67dp"
                android:layout_marginTop="10.33dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_telregister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="快速注册"
                    android:textColor="@color/yxf_sdk_blue"
                    android:paddingBottom="10.33dp"
                    android:textSize="12sp" />

      <!--          <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />-->

            </LinearLayout>

        </RelativeLayout>

<!--        <View
            android:layout_width="200dp"
            android:layout_height="0.1dp"
            android:layout_below="@+id/rl_login_phone_in"
            android:layout_centerHorizontal="true"
            android:background="@drawable/yxf_lin_shape_whi"></View>-->

    </RelativeLayout>

</RelativeLayout>