<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <EditText
        android:id="@+id/et_role_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入角色id"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_role_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_role_id"
        android:layout_marginTop="5dp"
        android:hint="请输入角色名" />

    <EditText
        android:id="@+id/et_role_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_role_name"
        android:layout_marginTop="5dp"
        android:hint="请输入角色等级"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_zone_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_role_level"
        android:layout_marginTop="5dp"
        android:hint="请输入分区id"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_zone_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_zone_id"
        android:layout_marginTop="5dp"
        android:hint="请输入分区名" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_zone_name"
        android:gravity="center">

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消" />
    </LinearLayout>

</RelativeLayout>