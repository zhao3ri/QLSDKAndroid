<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/login_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout 
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/login_top"
        />
	<LinearLayout 
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/wrap_foot"
	    android:gravity="center"
	    android:orientation="vertical">
	    <LinearLayout 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal">
	    	<ImageView 
	    	    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="@drawable/id_l"
	    	    />
	        <EditText 
			    android:id="@+id/item_user_name"
			    android:textColor="#ffffff"
			    android:background="@drawable/input_r"
			    android:layout_width="140px"
			    android:textSize="12dip"
			    android:layout_height="28px">
		    
			</EditText>	
			<ImageView 
			    android:layout_marginLeft="10dip"
	    	    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="@drawable/pw_l"
	    	    />
			<EditText 
			    android:id="@+id/item_password"
			    android:textColor="#ffffff"
			    android:inputType="textPassword"
			    android:textSize="12dip"
			    android:background="@drawable/input_r"
			    android:layout_width="140px"
			   	android:layout_height="28px">
			    
			</EditText>	
	    </LinearLayout>
	    
		<CheckBox  
		    android:id="@+id/item_quick_login"
		    android:button="@drawable/re_pw_select"
		    android:layout_width="130px"
		    android:layout_height="wrap_content"/>
		<LinearLayout 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal">
		    <ImageView
			    android:id="@+id/item_ok"
			    android:src="@drawable/bon_login_select"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"/>
			<Button 
			    android:id="@+id/item_register"
			    android:visibility="gone"
			    android:layout_marginLeft="20dip"
			    android:background="@drawable/bon_reg_select"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"/>
		    
		</LinearLayout>
		
	</LinearLayout>
	
</LinearLayout>